.row
	form.col.s12
		.row
			.input-field.col.s12
				input(type="text" name="nameProduct" id="nameProduct")
				label(for="nameProduct") Nombre
		.row
			.col.s3
				label.label-select(for="categoryProduct") Categoria 
				select.browser-default(name="categoryProduct" id="categoryProduct" ng-options="category as category.description for category in $ctrl.categories track by category.id" ng-model="$ctrl.categoryProduct")
					option(value="") Selecciona
			.col.s3
				label.label-select(for="brandProduct") Marca 
				select.browser-default(name="brandProduct" id="brandProduct" ng-options="brand as brand for brand in $ctrl.brands track by brand" ng-model="$ctrl.brandProduct")
					option(value="") Selecciona
			.col.s3
				label(for="typeProduct") &nbsp;
				.switch
					label
						| Fisico
						input(type='checkbox' id="typeProduct" name="typeProduct" ng-model="$ctrl.typeProduct")
						span.lever
						|  Virtual
		.row
			.input-field.col.s6
				input(type="number" name="priceProduct" id="priceProduct")
				label(for="priceProduct") Precio
			.input-field.col.s6
				input(type="number" name="priceListProduct" id="priceListProduct")
				label(for="priceListProduct") Precio de lista
		.row
			button.col.s2.offset-s5.btn.waves-effect.waves-light(type='submit' name='sendProduct') 
				| Grabar 
				i.material-icons.right send